<h4>Requisição</h4>

<%=form_for([client,request], :remote => true) do |f|%>
	
	<%=f.hidden_field :client_id, :value => client.id %>
	<div class="field">
		<%=f.label :description, "Descrição: " %>
		<%=f.text_field :description %>
	</div>

	<div class="field">
		<%=f.label :status, "Status: " %>
		<%=f.select :status, options_for_select(Status.all.collect {|s| [s.description, s.description]}) %>
	</div>

	<div class="actions">
		<%=f.submit "Salvar", :class => "btn btn-success" %>
	</div>
<% end %>