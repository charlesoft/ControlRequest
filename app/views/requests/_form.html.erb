<h4>Requisição</h4>

<%=form_for([client,request], :remote => true) do |f|%>
	
	<%=f.hidden_field :client_id, :value => client.id %>
	<div class="field">
		<%=f.label :description, "Descrição: " %>
		<%=f.text_field :description %>
	</div>

	<div class="field">
		<%=select :status, :status_id, Statuses.all.collect {|s| [s.description, s.id]}, :include_blank => true %>
	</div>

	<div class="actions">
		<%=f.submit "Salvar", :class => "btn btn-success" %>
	</div>
<% end %>