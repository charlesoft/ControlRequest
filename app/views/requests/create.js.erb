<% if @request.persisted? %>
$("#requisicao").html("<%=j render :partial => 'requests/index', :locals => {:requests => @request.client.requests} %>");
$("#requisicao").prepend("<%=j notice %>");
$("#nova_requisicao").html("<%=j render :partial => 'requests/form', :locals => {:request => Request.new, :client => @request.client} %>");
<% else %>
$("#nova_requisicao").html("<%=j render :partial => 'request/form', :locals => {:request => @request, :client => @request.client} %>");