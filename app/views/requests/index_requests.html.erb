<div class="row-fluid">
	<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= notice %>
		</div>
	<div class="page-header">
		<h1>Clientes</h1>
	</div>

	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>ID</th>
				<th>Descrição</th>
				<th>Status</th>
				<th></th>
			</tr>

		</thead>
		<tbody>
			<% if @requests.any? %>
			<% @requests.each do |request| %>
			<tr class="list-users">
				<td><%=request.id %></td>
				<td><%=request.description %></td>
				<td><%=request.status %></td>
				<td>
					<div class="btn-group">
						<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><%=link_to fa_icon("pencil")+" Editar", client_edit_request_path(request)%></li>

							<li><%=link_to fa_icon("trash-o")+" Deletar", request, :method => :delete, :confirm => "Você tem certeza?" %></li>
							<li><%=link_to fa_icon("user")+" Detalhes", request %></li>
						</ul>
					</div>
				</td>

			</tr>
			<% end %>

			<% else %>
			<div class="alert">
				<%=link_to "Nova Requisicao", new_client_request_path, :class => "btn btn-primary" %>
			</div>
			<% end %>
		</tbody>
	</table>	
	</div>
</div>