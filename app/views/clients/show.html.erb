  <div id="notice">
    <%=notice %>
  </div>
  <div class="row-fluid">
  	<div class="page-header">
  		<h1>Detalhes do cliente</h1>
  	</br>
  		<table class="table table-striped table-bordered table-condensed">
  			<tr>
  				<h2><p><b>Descrição: </b> <%=@client.description %></p></h3>
  				<h4><p><b>Endereço: </b> <%=@client.adress %></p></h4>
  			</tr>
  		</table>

      <div id="nova_requisicao">
        <%=render :partial => 'requests/form', :locals => {:request => Request.new, :client => @client} %>

      </div>

      <div id="requisicao">
        <%=render :partial => 'requests/index', :locals => {:requests => @client.requests} %>
      </div>

  		<%=link_to "Editar ", edit_client_path(@client), :class => "btn btn-primary" %>
  		<%=link_to "Voltar ", clients_path, :class => "btn" %>
  </div>