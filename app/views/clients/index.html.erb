<div class="row-fluid">
	<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= notice %>
		</div>
	<div class="page-header">
		<h1>Clientes</h1>
	</div>

	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>ID</th>
				<th>Descrição</th>
				<th>Endereço</th>
				<th></th>
			</tr>

		</thead>
		<tbody>
			<% if @clients.any? %>
			<% @clients.each do |client| %>
			<tr class="list-users">
				<td><%=client.id %></td>
				<td><%=client.description %></td>
				<td><%=client.adress %></td>
				<td>
					<div class="btn-group">
						<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><%=link_to fa_icon("pencil")+" Editar", edit_client_path(client)%></li>
							<li><%=link_to fa_icon("globe")+" Requsições", index_requests_path(client.description) %></li>
							<li><%=link_to fa_icon("trash-o")+" Deletar", client, :method => :delete, :confirm => "Você tem certeza?" %></li>
							<li><%=link_to fa_icon("user")+" Detalhes", client %></li>
						</ul>
					</div>
				</td>

			</tr>
			<% end %>

			<% else %>
			<div class="alert">
				Não há clientes cadastrados
			</div>
			<% end %>
		</tbody>
	</table>	
	</div>
</div>